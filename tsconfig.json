{
    "compilerOptions": {
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "strict": true,
        "strictPropertyInitialization": false,
        "sourceMap": false,
        "outDir": "./dist",
        "baseUrl": "./",
        "skipLibCheck": true,
        "noImplicitAny": false,
        "allowJs": true,
        "checkJs": false
    },

    "exclude": [
        "node_modules",
        "migration.ts",
        "src/plugins/**/ui/*",
        "admin-ui"
    ]
}
